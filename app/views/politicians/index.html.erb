<p id="notice"><%= notice %></p>

<h1>Listing Politicians</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Born</th>
      <th>Telephone</th>
      <th>Web</th>
      <th>Description</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @politicians.each do |politician| %>
      <tr>
        <td><%= image_tag politician.avatar.url(:thumb), class: "avatar-thumb" %></td>
        <td><%= politician.full_name %></td>
        <td><%= politician.born %></td>
        <td><%= politician.telephone %></td>
        <td><%= politician.web %></td>
        <td><%= truncate(politician.description, :ommision => "... Read More", :length => 150, separator: ' ', :escape => false) %></td>
        <td><%= politician.email %></td>
        <td><%= link_to 'Show', politician %></td>
        <td><%= link_to 'Edit', edit_politician_path(politician) %></td>
        <td><%= link_to 'Destroy', politician, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

