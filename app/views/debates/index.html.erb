<p id="notice"><%= notice %></p>
<%= link_to 'Create a New Debate', new_debate_path %>

<h1>Listing Debates</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debates.each do |debate| %>
      <tr>
        <td><%= link_to debate.title, debate %><br> 

         <div class="btn-group">
          <button type="button" class="btn btn-success"><%= debate.get_upvotes.size %> <span class="fa fa-thumbs-o-up"> Support</span></button>
          <button type="button" class="btn btn-warning"><%= debate.get_downvotes.size %> <span class="fa fa-thumbs-o-down"> Oppose</span></button>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

