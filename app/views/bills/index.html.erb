<p id="notice"><%= notice %></p>



<div class="container" style="margin-top:20px;margin:0 auto;"><div class="container" style="margin-top:20px; margin:0 auto;">
 
  <h4>Listing Bills</h4>
  <div class="row">
     <% @bills.each do |bill| %>
    <div class="col-lg-10">
      <div class="media">
        <div class="media-body">
          <h3 class="media-heading">
            <strong><%= link_to (bill.title.html_safe), bill %></strong>
          </h3>
          <p class="">Bill introduced on <%= bill.date.strftime(" %d %b, %Y ") %></p>
          <p class=""><%= truncate(bill.summary, :length => 250, separator: ' ', :escape => false) %></p>
          <p class="">
            <div class="btn-group">
              <button type="button" class="btn btn-success"><%= bill.get_upvotes.size %> <span class="fa fa-thumbs-o-up"> Support</span></button>
              <button type="button" class="btn btn-warning"><%= bill.get_downvotes.size %> <span class="fa fa-thumbs-o-down"> Oppose</span></button>
            </div>
          </p>
        </div>
      </div>     
    
    </div>
    <% end %>
  </div>
</div>
<p> Continous scrolling no pagination</p>