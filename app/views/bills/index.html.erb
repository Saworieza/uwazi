<p id="notice"><%= notice %></p>
<%= link_to 'New Bill', new_bill_path %>
<h1>Listing Bills</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr style="border-bottom:thin solid grey;">
        <td><%= link_to (bill.title), bill %></td>
        <td><%= bill.summary %></td>
        <td><%= bill.date %></td>
        <td>
        <%= link_to upvote_bill_path(bill), method: :put do %>
          Upvote
          <%= bill.get_upvotes.size %>
        <% end %></td>

        <td><%= link_to downvote_bill_path(bill), method: :put do %>
          Downvote
          <%= bill.get_downvotes.size %>
        <% end %></td>
      </tr>
      
    <% end %>
        
  </tbody>
</table>

<br>


