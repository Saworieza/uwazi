<p id="notice"><%= notice %></p>



<div class="container" style="margin-top:20px;margin:0 auto;"><div class="container" style="margin-top:20px; margin:0 auto;">
  <% if user_signed_in? %>
    <%= link_to 'New Bill', new_bill_path %>
  <% end %>
  <h4>Listing Bills</h4>
  <div class="row">
     <% @bills.each do |bill| %>
    <div class="col-lg-10">
      <div class="media">
        <div class="media-body">
          <h3 class="media-heading">
            <strong><%= link_to (bill.title.html_safe), bill %></strong>
          </h3>
          <p class="">Bill introduced on <%= bill.date.strftime(" %d %b, %Y ") %></p>
          <p class=""><%= truncate(bill.summary, :length => 250, separator: ' ', :escape => false) %></p>
          <p class=""><span class="support"><%= bill.get_upvotes.size %> Support </span>| <span class="oppose"><%= bill.get_downvotes.size %> Oppose</span></p>
        </div>
      </div>     
    
    </div>
    <% end %>
  </div>
</div>
<p> Continous scrolling no pagination</p>