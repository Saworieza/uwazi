<%= form_for @senator, html: { multipart: true } do |f| %>
  <% if @senator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@senator.errors.count, "error") %> prohibited this senator from being saved:</h2>

      <ul>
      <% @senator.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= image_tag @senator.avatar.url(:medium)%>
  </div>
  <div class="field">
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :full_name %><br>
    <%= f.text_field :full_name %>
  </div>
  <div class="field">
    <%= f.label :born %><br>
    <%= f.date_select :born %>
  </div>
  <div class="field">
    <%= f.label :telephone %><br>
    <%= f.text_field :telephone %>
  </div>
  <div class="field">
    <%= f.label :Party %>
    <%= f.collection_select :party_id, Party.all, :id, :abbrev %>
  </div>
  
  <div class="field">
    <%= f.label :Coalition %>
    <%= f.collection_select :coalition_id, Coalition.all, :id, :name %>
  </div>
  
  <div class="field">
    <%= f.label :County %>
    <%= f.collection_select :county_id, County.all, :id, :name %>
  </div>
  
  <div class="field">
    <%= f.label :description %>
    <%= f.cktext_area :description, rows: 10 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
