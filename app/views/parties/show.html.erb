<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-10" style="margin:0 auto;">
    <div class="col-sm-6">
      <p>
        <%= link_to 'Back', parties_path, class: "pull-right" %>
      </p>
      <p>
        <%= image_tag @party.avatar.url(:thumb), class: "media-object img-thumbnail" %>
      </p>
      
      <p>
        <strong>Name:</strong>
        <%= @party.name %>
      </p>
      
      <p>
        <strong>Founded:</strong>
        <%= @party.founded %>
      </p>
      
      <p>
        <strong>Abbrev:</strong>
        <%= @party.abbrev %>
      </p>
      
      <p>
        <strong>Coalition:</strong>
        <%= link_to Coalition.find(@party.coalition_id).name, coalition_path(@party.coalition_id) %>
      </p>
      
      <!-- <%#= link_to 'Edit', edit_party_path(@party) %> |
      <%#= link_to 'Back', parties_path %> -->
    </div>
    
    <div class="col-sm-6">
      <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#home">Politicians</a></li>
        <li><a data-toggle="tab" href="#menu1">Parties</a></li>
      </ul>
      
      <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
          <h3>Politicians</h3>
          <p>Politicians in This Party</p>
          <div class="row">
            <% @party.politicians.each do |politician| %>
              <div class="col-lg-6">
                <div><%= image_tag politician.avatar.url(:thumb), class: "media-object img-thumbnail" %></div>
                <div><%= link_to (truncate(politician.full_name, :length => 16, separator: ' ', :escape => false)), politician %></div>
          <div>Position <%= link_to Contest.find(politician.contest_id).name, contest_path(politician.contest_id) %></div>
                <div> County <%= link_to County.find(politician.county_id).name, county_path(politician.county_id) %></div>
              </div>
            <% end %>
          </div>
        </div>
        <div id="menu1" class="tab-pane fade">
          <h3>Parties</h3>
          
          <p>Parties in this Coalition</p>
          <p>
            
          </p>
        </div>
      </div>
    </div>
  </div>
</div>



